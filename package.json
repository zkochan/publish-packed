{
  "name": "publish-packed",
  "version": "2.1.1",
  "description": "Publishes a package together with its dependencies",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "bin": "lib/cli.js",
  "preferGlobal": true,
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "tsc": "tsc",
